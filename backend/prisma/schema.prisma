generator client {
  provider = "prisma-client-js"
}
model historicoMensagem {
  id         Int      @id @default(autoincrement())
  clienteId  BigInt
  dataEnvio  DateTime
  tipo       String
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pedido {
  id            BigInt   @id
  data          DateTime
  totalProdutos Float
  contatoId     BigInt
  contato       Contato  @relation(fields: [contatoId], references: [id])
}

model Contato {
  id       BigInt   @id
  nome     String
  celular  String
  pedidos  Pedido[]

  ClientesMonitorados ClientesMonitorados[]
}

model ClientesMonitorados {
  contatoId              BigInt   @id
  quantidadePedidos      Int
  periodoCompraMediaDias Int
  ultimaCompra           DateTime
  proximaCompraPrevista  DateTime
  mensagemEnviada        Boolean

  contato                Contato  @relation(fields: [contatoId], references: [id])
}